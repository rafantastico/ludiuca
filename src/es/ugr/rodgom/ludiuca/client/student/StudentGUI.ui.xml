<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:ludiuca='urn:import:es.ugr.rodgom.ludiuca.client.student'>

  <g:DockLayoutPanel unit='EM'>
    <g:north size='5'>
      <ludiuca:TopPanel ui:field='topPanel' />
    </g:north>

    <g:center>
      <g:SplitLayoutPanel>
        <g:west size='192'>
          <ludiuca:Shortcuts ui:field='shortcuts' />
        </g:west>

        <g:center>
          <ludiuca:CentralPan ui:field='centralPan' />
        </g:center>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>
